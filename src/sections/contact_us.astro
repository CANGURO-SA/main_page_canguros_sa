<section
	id="contact_us"
	class="min-h-screen flex items-center justify-center"
	style="background: #001c44"
>
	<div
		class="w-full max-w-md rounded-lg p-8 border-t-4 border-[#FF6600] shadow-lg"
		style="background: linear-gradient(135deg, #012D6A 0%, #001c44 50%, #993300 100%); box-shadow: 0 8px 24px 0 rgba(255,102,0,0.25);"
	>
		<h1 class="text-3xl font-bold text-center text-white mb-6">
			Contáctanos
		</h1>
		<form id="contactForm" class="space-y-4" method="POST">
			<div>
				<label for="name" class="block text-lg font-semibold text-white"
					>Nombre completo</label
				>
				<input
					type="text"
					id="name"
					name="name"
					required
					placeholder="Ej: Juan Pérez"
					class="mt-1 block w-full rounded-md border-2 border-blue-900 bg-blue-50 shadow-sm focus:border-yellow-400 focus:ring-yellow-400 px-3 py-2 transition"
				/>
			</div>
			<div>
				<label
					for="phone"
					class="block text-lg font-semibold text-white"
					>Número de teléfono</label
				>
				<input
					type="tel"
					id="phone"
					name="phone"
					required
					pattern="[0-9]{10,15}"
					placeholder="Ej: 3001234567"
					class="mt-1 block w-full rounded-md border-2 border-blue-900 bg-blue-50 shadow-sm focus:border-yellow-400 focus:ring-yellow-400 px-3 py-2 transition"
				/>
			</div>
			<div>
				<label
					for="email"
					class="block text-lg font-semibold text-white"
					>Correo electrónico</label
				>
				<input
					type="email"
					id="email"
					name="email"
					required
					placeholder="Ej: correo@ejemplo.com"
					class="mt-1 block w-full rounded-md border-2 border-blue-900 bg-blue-50 shadow-sm focus:border-yellow-400 focus:ring-yellow-400 px-3 py-2 transition"
				/>
			</div>
			<div>
				<label
					for="comment"
					class="block text-lg font-semibold text-white"
					>Comentario</label
				>
				<textarea
					id="comment"
					name="comment"
					rows="4"
					required
					placeholder="¿En qué podemos ayudarte?"
					class="mt-1 block w-full rounded-md border-2 border-blue-900 bg-blue-50 shadow-sm focus:border-yellow-400 focus:ring-yellow-400 px-3 py-2 transition"
				></textarea>
			</div>
			<button
				type="submit"
				class="w-full py-2 px-4 font-bold rounded-lg shadow-lg transition border-2 border-blue-900 bg-[#001c44] text-white hover:bg-[#003366] focus:bg-[#003366]"
				style="box-shadow: 0 8px 24px 0 rgba(0,28,68,0.35);"
				>Enviar</button
			>
		</form>
		<div
			id="formMessage"
			class="mt-4 text-center text-green-700 font-semibold hidden"
		>
			¡Gracias por contactarnos!
		</div>
	</div>

