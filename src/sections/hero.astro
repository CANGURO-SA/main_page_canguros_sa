---
import Header from "../sections/header.astro";
---

<div class="relative h-screen">
	<img
		src="/hero.png"
		alt="Hero Background"
		class="w-full h-full object-cover -z-1 absolute"
	/>

	<Header />
	<div class="flex">
		<div class="flex flex-col gap-2 items-start justify-center h-140 pl-10">
			<h1
				class="text-white text-4xl font-bold typewriter"
				style="animation-delay: 0s;"
			>
				Transformamos ideas en realidad
			</h1>
			<p class="text-white text-2xl typewriter" style="animation-delay: 2.5s;">
				En Cangurossa, entendemos el ritmo de tu negocio.
			</p>

			<div class="flex justify-center w-full p-2">
				<button
					class="bg-blue-500 text-white px-4 py-2 rounded-md hover:cursor-pointer"
				>
					Conoce m√°s
				</button>
			</div>
		</div>
	</div>
</div>

<style>
	.typewriter {
		overflow: hidden;
		white-space: nowrap;
		border-right: 2px solid white;
		display: inline-block; /* Asegura que el width funcione */
		width: 0; /* Oculta el texto por defecto */
		animation: typing 2.5s steps(40, end) forwards;
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		const typewriters = document.querySelectorAll(".typewriter");
		typewriters.forEach((el) => {
			el.addEventListener("animationend", (e) => {
				const event = e;
				// @ts-ignore
				if (event.animationName === "typing") {
					// @ts-ignore
					el.style.borderRight = "none";
				}
			});
		});
	});
</script>
